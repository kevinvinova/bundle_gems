  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.content %></td>
    <td><%= comment.user_id %></td>
    <td><%= comment.product_id %></td>
    <td><%= link_to 'Show', product_comment_path(comment.product, comment) %></td>
    <td><%= link_to 'Edit', edit_product_comment_path(@product, comment) %></td>
    <td><%= link_to 'Destroy', product_comment_path(@product, comment), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
