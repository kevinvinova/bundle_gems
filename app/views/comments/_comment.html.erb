<%= content_tag_for(:li, comment) do %> <!-- render option li (list) doi voi doi tuong comment -->
  <!--p><b><%#= comment.product.name %> is commented:</b></p> <br/-->
  <p><%= comment.content %></p>
  <span class="age">Posted at <%= time_ago_in_words(comment.created_at) %> ago.
  (<%= link_to 'Delete', product_comment_path(@product, comment), :confirm => 'Are you sure?', :method => :delete, :remote => true %>)</span>
<% end %>
